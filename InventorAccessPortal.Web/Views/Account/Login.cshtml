@model InventorAccessPortal.Web.Models.Account.LoginModel
@using InventorAccessPortal.Web.Models.Account
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Login</h1>
@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { id = "LoginForm" }))
{
    @Html.AntiForgeryToken()
    @Html.Partial("~/Views/Shared/_IgnoreFormWarnings.cshtml")
    <div>
        <table>
            <tr>
                <td>Username or Email: </td>
                <td>@Html.TextBoxFor(p => p.UsernameOrEmail)</td>
            </tr>
            <tr>
                <td>Password: </td>
                <td>@Html.PasswordFor(p => p.Password)</td>
            </tr>
        </table>
        <input type="button" value="Sign In" data-toggle="modal" data-target="#ConfidentialityModal">
    </div>
}
@Html.Partial("~/Views/Shared/Modals/_ConfidentialityNotice.cshtml")

<script>
    ConfidentialityModalAction.setOnAction(function (action) {
        if (action === "submit")
            $("#LoginForm").submit();
    });
</script>


