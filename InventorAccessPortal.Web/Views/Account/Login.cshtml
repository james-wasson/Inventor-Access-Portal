@model InventorAccessPortal.Web.Models.Account.LoginModel
@using InventorAccessPortal.Web.Models.Account
@{
    /**/

    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Login</h1>
@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { id = "LoginForm" }))
{
    @Html.AntiForgeryToken()
    @Html.Partial("~/Views/Shared/_IgnoreFormWarnings.cshtml")

    <div class="form-group row">
        <label for="inputHorizontalSuccess" class="col-sm-2 col-form-label">Username or Email:</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(p => p.UsernameOrEmail, new { id = "usernameOrEmail" })
        </div>
    </div>
    <div class="form-group row">
        <label for="password" class="col-sm-2 col-form-label">Password:</label>
        <div class="col-sm-10">
            @Html.PasswordFor(p => p.Password, new { id = "password" })
        </div>
    </div>
    <input class="btn btn-primary" type="button" value="Sign In" data-toggle="modal" data-target="#ConfidentialityModal">
}
@Html.Partial("~/Views/Shared/Modals/_ConfidentialityNotice.cshtml")

<script>
    (function () {
        var form = $("#LoginForm");
        ConfidentialityModalAction.setOnAction(function (action) {
            if (action === "submit")
                form.submit();
        });
        form.keydown(function (event) {
            console.log(event);
            if (event.key === "Enter")
                $("#ConfidentialityModal").modal('show');
        });
    }());

</script>


