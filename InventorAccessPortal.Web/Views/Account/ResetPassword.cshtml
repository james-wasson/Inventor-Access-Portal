@model InventorAccessPortal.Web.Models.Account.ResetPasswordModel
@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Reset Password</h1>
@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group row">
        <label for="email" class="col-sm-2 col-form-label">Email:</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(p => p.Email, new { id = "email" })
        </div>
    </div>

    <input class="btn btn-primary" type="submit" value="Reset Password" />
    @Html.Partial("~/Views/Shared/_IgnoreFormWarnings.cshtml")
}
@Scripts.Render("~/bundles/account/scripts")
